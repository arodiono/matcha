{% set title = 'Sign up' %}
{% set body = 'signup-page' %}
{% extends 'templates/core.twig' %}

{% block content %}
    <div class="page-header header-filter"
         style="background-image: url('{{ base_url() }}/img/index.png'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="col-md-10 col-md-offset-1">
                <div class="row">
                    <div class="card card-signup">
                        <h2 class="card-title text-center">Tell about yourself</h2>
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <form class="form" method="post" action="{{ path_for('signup') }}" autocomplete="off">
                                    <div class="card-content">
                                        <div class="form-group label-floating is-empty {{ errors.first_name ? 'has-error is-focused' : '' }} {{ oldInput.first_name ? 'is-focused' : '' }}">
                                            <label class="control-label">First name</label>
                                            <input type="text" name="first_name" class="form-control" value="{{ oldInput.first_name }}">
                                            <span class="material-input"></span>
                                            {% if errors.first_name %}
                                                <span class="material-icons form-control-feedback">clear</span>
                                                <span class="help-block">{{ errors.first_name | first }}</span>
                                            {% endif %}
                                        </div>
                                        <div class="form-group label-floating is-empty {{ errors.last_name ? 'has-error is-focused' : '' }} {{ oldInput.last_name ? 'is-focused' : '' }}">
                                            <label class="control-label">Last name</label>
                                            <input type="text" name="last_name" class="form-control" value="{{ oldInput.last_name }}">
                                            <span class="material-input"></span>
                                            {% if errors.last_name %}
                                                <span class="material-icons form-control-feedback">clear</span>
                                                <span class="help-block">{{ errors.last_name | first }}</span>
                                            {% endif %}
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <select class="selectpicker" data-style="btn btn-primary btn-round" title="Gender" data-size="3">
                                                    <option disabled>Gender</option>
                                                    <option value="2">Male</option>
                                                    <option value="3">Female</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <select class="selectpicker" data-style="btn btn-primary btn-round" title="Sex preference" data-size="4">
                                                    <option disabled>Sex preference</option>
                                                    <option value="2">Same</option>
                                                    <option value="3">Opposite</option>
                                                    <option value="4">Either</option>
                                                </select>
                                            </div>
                                        </div>
                                        {#<input type="text" value="" class="tagsinput" data-role="tagsinput" data-color="rose" style="display: none;" placeholder="Write your interests, separated by commas here ...">#}

                                        <div class="form-group label-floating is-empty">
                                            <label class="control-label">Write your interests, separated by commas</label>
                                            <input type="text" value="" class="tagsinput" data-role="tagsinput" data-color="rose" style="display: none;">
                                            <span class="material-input"></span>
                                        </div>
                                        <div class="form-group label-floating is-empty">
                                            <label class="control-label"> Biography</label>
                                            <textarea class="form-control textarea-limited" rows="3" maxlength="150"></textarea>
                                            <span class="material-input"></span>
                                            <h5><small><span id="textarea-limited-message" class="pull-right">150 characters left</span></small></h5>
                                        </div>

                                    </div>
                                    <div class="footer text-center">
                                        <button type="submit" href="#" class="btn btn-primary btn-round btn-wd btn-lg">
                                            Next step
                                        </button>
                                    </div>
                                    {{ csrf.field | raw }}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
