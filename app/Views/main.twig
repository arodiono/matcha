{% extends 'templates/core.twig' %}

{% block content %}

    <div class="container">
        <div class="main-search">
            <div class="main-search-title">New users</div>
            <div class="main-search-section">
            {% for user in users['new'] %}
                <div class="card card-profile main-search-item">
                    <a href="/user/{{ user.username }}">
                        <div class="card-image">
                            {% if user.profile_photo %}
                                <img class="img" src="/uploads/{{ user.username }}/{{ user.profile_photo }}">
                            {% else %}
                                <img class="img" src="/img/placeholder.jpg">
                            {% endif %}
                        </div>
                    </a>
                    <div class="card-content">
                        <a href="/user/{{ user.username }}">
                            <h4 class="card-title">{{ user.first_name }} {{ user.last_name }}</h4>
                        </a>
                        <h6 class="category text-gray">{{ user.bio }}</h6>
                    </div>
                    <div class="footer">
                        {% for tag in user.tags %}
                            <a href="{{ path_for('search.tag', {id: tag.id}) }}"><span class="label label-primary">#{{ tag.tag }}</span></a>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
            </div>
            <div class="main-search-title">Popular</div>
            <div class="main-search-section">
            {% for user in users['popular'] %}
                <div class="card card-profile main-search-item">
                    <a href="/user/{{ user.username }}">
                        <div class="card-image">
                            {% if user.profile_photo %}
                                <img class="img" src="/uploads/{{ user.username }}/{{ user.profile_photo }}">
                            {% else %}
                                <img class="img" src="/img/placeholder.jpg">
                            {% endif %}
                        </div>
                    </a>
                    <div class="card-content">
                        <a href="/user/{{ user.username }}">
                            <h4 class="card-title">{{ user.first_name }} {{ user.last_name }}</h4>
                        </a>
                        <h6 class="category text-gray">{{ user.bio }}</h6>
                    </div>
                    <div class="footer">
                        {% for tag in user.tags %}
                            <a href="{{ path_for('search.tag', {id: tag.id}) }}"><span class="label label-primary">#{{ tag.tag }}</span></a>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
            </div>
            <div class="main-search-title">Near you</div>
            <div class="main-search-section">
            {% for user in users['near'] %}
                <div class="card card-profile main-search-item">
                    <a href="/user/{{ user.username }}">
                        <div class="card-image">
                            {% if user.profile_photo %}
                                <img class="img" src="/uploads/{{ user.username }}/{{ user.profile_photo }}">
                            {% else %}
                                <img class="img" src="/img/placeholder.jpg">
                            {% endif %}
