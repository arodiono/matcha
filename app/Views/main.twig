                    </a>
                    <div class="card-content">
                        <a href="/user/{{ user.username }}">
                            <h4 class="card-title">{{ user.first_name }} {{ user.last_name }}</h4>
                        </a>
                        <h6 class="category text-gray">{{ user.bio }}</h6>
                    </div>
                    <div class="footer">
                        {% for tag in user.tags %}
                            <a href="{{ path_for('search.tag', {id: tag.id}) }}"><span class="label label-primary">#{{ tag.tag }}</span></a>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
    <script>
        $(function () {
            $('[data-action="like"]').on('click', function () {
                $.ajax({
                    method: 'post',
                    url: '/like/toggle/' + $(this).data('user')
                });
                $(this).toggleClass('btn-rose')
            })
        })
    </script>
{% endblock %}