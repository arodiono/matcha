{% extends 'templates/core.twig' %}
{% set title = user.username %}
{% set body = 'profile-page' %}

{% block content %}
    <div class="page-header header-filter" data-parallax="true" style="background-image: url('{{ base_url() }}/img/index.png');"></div>

    <div class="main main-raised">
        <div class="profile-content">
            <div class="container">

                <div class="row">
                    <div class="col-xs-6 col-xs-offset-3">
                        <div class="profile">
                            <div class="avatar">
                                {% if user.profile_photo %}
                                    <img src="{{ base_url() ~ "/uploads/" ~ user.username ~ "/" ~ user.profile_photo }}" alt="" class="img-circle img-responsive img-raised">
                                {% else %}
                                    <img src="{{ base_url() ~ "/img/placeholder.jpg" }}" alt="" class="img-circle img-responsive img-raised">
                                {% endif %}
                            </div>
                            <div class="name text-center">
                                <h3 class="title">{{ user.first_name|capitalize ~ ' ' ~ user.last_name|capitalize }}<i class="material-icons" data-toggle="tooltip"
                                                                    data-placement="top" title="" data-container="body"
                                                                    data-original-title="last online">fiber_manual_record</i>
                                </h3>
                            </div>
                        </div>
                        <br/>
                        <div class="profile-info list-unstyled">
                            <li data-toggle="tooltip" data-placement="top" title="" data-container="body"
                                data-original-title="rating">
                                <i class="material-icons">whatshot</i>100
                            </li>
                            <li data-toggle="tooltip" data-placement="top" title="" data-container="body"
                                data-original-title="rating">
                                <i class="material-icons">room</i>Kyiv
                            </li>
                            <li data-toggle="tooltip" data-placement="top" title="" data-container="body"
                                data-original-title="rating">
                                <i class="material-icons">wc</i> {{ user.gender }}
                            </li>
                            <li data-toggle="tooltip" data-placement="top" title="" data-container="body"
                                data-original-title="rating">
                                <i class="material-icons">people</i> {{ user.sex_preference }}
                            </li>
                        </div>
                    </div>
                    <div class="col-xs-3 follow">
                        {% if user.id != auth.user.id %}
                            <form action="{{ path_for('like.toggle', {id: user.id }) }}" method="post">
                                    <button type="submit" class="btn btn-fab {{ isLiked ? '' : 'btn-rose' }}" rel="tooltip" title="" data-original-title="{{ isLiked ? 'Unlike this user' : 'Like this user' }}">
                                        <i class="material-icons">favorite</i>
                                    </button>
                            </form>
                        {% endif %}
                        {% if isMutually %}
                            <button class="btn btn-fab btn-rose" rel="tooltip" title="" data-original-title="Send message">
                                <i class="material-icons">email</i>
                            </button>
                        {% else %}
                            <button class="btn bnt-disabled btn-fab btn-rose" rel="tooltip" title="" data-original-title="To write a message you need mutual sympathy!" data-toggle="modal" data-target="#InfoModal">
                                <i class="material-icons">email</i>
                            </button>
                        {% endif %}

                    </div>
                </div>
                <div class="row">
                    <div class="interests">
                        {% for tag in user.tags%}
                            <a href="{{ path_for('search.tag', {id: tag.id}) }}"><span class="label label-default">#{{ tag.tag }}</span></a>
                        {% endfor %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <div class="description text-center">
                            <p>{{ user.bio }}</p>
                        </div>
                        {#<div class="text-center">#}
                            {#<button class="btn btn-rose btn-round">#}
                                {#<i class="material-icons">favorite</i> Like#}
                                {#<div class="ripple-container"></div>#}
                            {#</button>#}
                            {#<button class="btn btn-rose btn-round">#}
                                {#<i class="material-icons">email</i> message#}
                                {#<div class="ripple-container"></div>#}
                            {#</button>#}
                        {#</div>#}
                    </div>
                </div>
                <hr>
                <div class="row gallery">
                    {% for photo in user.photos %}
                        <img src="{{ base_url() }}/uploads/{{ user.username }}/{{ photo.photo }}" class="gallery-img"/>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="InfoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-small ">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="material-icons">clear</i></button>
                </div>
                <div class="modal-body text-center">
                    <h5>To write a message you need mutual sympathy!</h5>
                </div>
                    <div class="modal-footer text-center">
                        <button type="button" data-dismiss="modal" class="btn btn-info btn-simple">Ok</button>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}