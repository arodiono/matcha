{% set title = 'Sign in' %}
{% set body = 'signup-page' %}
{% extends 'templates/core.twig' %}

{% block content %}
    <div class="page-header header-filter"
         style="background-image: url('{{ base_url() }}/img/index.png'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="col-md-10 col-md-offset-1">
                <div class="row">
                    <div class="card card-signup">
                        <h2 class="card-title text-center">Sign in</h2>
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <form class="form" method="post" action="{{ path_for('signin') }}">
                                    <div class="card-content">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="material-icons">email</i></span>
                                            <div class="form-group label-floating is-empty {{ errors.email ? 'has-error is-focused' : '' }} {{ oldInput.email ? 'is-focused' : '' }}">
                                                <label class="control-label">Email</label>
                                                <input type="email" name="email" class="form-control"
                                                       value="{{ oldInput.email }}" title="Email">
                                                <span class="material-input"></span>
                                                {% if errors.email %}
                                                    <span class="material-icons form-control-feedback">clear</span>
                                                    <span class="help-block">{{ errors.email | first }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="material-icons">lock_outline</i></span>
                                            <div class="form-group label-floating is-empty {{ errors.password ? 'has-error is-focused' : '' }} {{ oldInput.password ? 'is-focused' : '' }}">
                                                <label class="control-label">Password</label>
                                                <input type="password" name="password" class="form-control"
                                                       value="{{ oldInput.password }}" title="Password">
                                                <span class="material-input"></span>
                                                {% if errors.password %}
                                                    <span class="material-icons form-control-feedback">clear</span>
                                                    <span class="help-block">{{ errors.password | first }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row text-right">
                                            <a href="{{ path_for('user.password.forgot') }}">Forgot password?</a>
                                        </div>
                                    </div>
                                    <div class="footer text-center">
                                        <button type="submit" href="#" class="btn btn-default btn-primary">
                                            Sign in
                                        </button>
                                        <hr>
                                        <a href="{{ fb }}" class="btn btn-facebook">Sign in with Facebook!</a>
                                        <a href="https://api.intra.42.fr/oauth/authorize?client_id=0b140691892f202e371a2e6600153ffe382b3a9d35aa87266e97af33eb299a00&redirect_uri=http%3A%2F%2Flocalhost%3A8080%2Fintra-login&response_type=code" class="btn">Sign in with Intra!</a>
                                    </div>
                                    {{ csrf.field | raw }}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}